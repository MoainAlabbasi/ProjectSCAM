# =============================================================================
# S-ACM (Smart Academic Content Management) - Environment Variables
# =============================================================================
# انسخ هذا الملف إلى .env وقم بتعديل القيم حسب بيئتك
# Copy this file to .env and modify values according to your environment
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
# مفتاح سري فريد للمشروع - قم بتوليد مفتاح جديد للإنتاج
# Generate a new key for production: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# وضع التصحيح - يجب أن يكون False في الإنتاج
# Debug mode - MUST be False in production
DEBUG=True

# المضيفات المسموح بها (مفصولة بفاصلة)
# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# استخدم PostgreSQL في الإنتاج
# Use PostgreSQL in production
USE_POSTGRES=False

# إعدادات PostgreSQL (مطلوبة فقط إذا كان USE_POSTGRES=True)
# PostgreSQL settings (required only if USE_POSTGRES=True)
DB_NAME=s_acm_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# -----------------------------------------------------------------------------
# Email Configuration (SMTP)
# -----------------------------------------------------------------------------
# إعدادات البريد الإلكتروني لإرسال رموز التحقق
# Email settings for sending verification codes
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_specific_password

# -----------------------------------------------------------------------------
# Google Gemini AI API
# -----------------------------------------------------------------------------
# مفتاح API للذكاء الاصطناعي من Google
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# حد الطلبات في الساعة لكل مستخدم
# Rate limit per user per hour
AI_RATE_LIMIT_PER_HOUR=10

# -----------------------------------------------------------------------------
# Security Settings (Production Only)
# -----------------------------------------------------------------------------
# هذه الإعدادات تُفعّل تلقائياً عندما DEBUG=False
# These settings are automatically enabled when DEBUG=False

# SECURE_SSL_REDIRECT=True
# CSRF_COOKIE_SECURE=True
# SESSION_COOKIE_SECURE=True
